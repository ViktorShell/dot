# Software
alt + Return
  kitty

alt + d
  rofi -show drun

alt + shift + q
  bspc node -c

# Moving between windows
alt + {h,j,k,l}
  bspc node -f {west,south,north,east}

# Swap window
alt + shift + {h,j,k,l}
 bspc node -s {west,south,north,east}

# Resize a window
alt + ctrl + {h,j,k,l}
  bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# Move window to workspace
alt + shift + {1-5}
  bspc node -d '^{1-5}'

# Toggle float/tilling
alt + {_,shift + } space
  bspc node -t {tiled,floating}

# Toggle fullscreen
alt + {_, shift + } f
  bspc node -t {fullscreen, tiled}

# Workspace
alt + {1-5}
  bspc desktop -f '^{1-5}'

# Restart sxhkd
alt + shift + c
  pkill -USR1 -x sxhkd

# Restart bspwm
alt + Escape
  bspc wm -r
